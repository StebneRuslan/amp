@font-face {
    font-family: 'PlayfairDisplay';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/PlayfairDisplay-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/PlayfairDisplay-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
