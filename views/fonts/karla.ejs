@font-face {
    font-family: 'Karla';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Karla-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Karla-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
