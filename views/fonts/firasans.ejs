@font-face {
    font-family: 'FiraSans';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/FiraSans-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/FiraSans-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
