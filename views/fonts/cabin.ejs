@font-face {
    font-family: 'Cabin';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Cabin-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Cabin-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
