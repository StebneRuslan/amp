@font-face {
    font-family: 'Chivo';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Chivo-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Chivo-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
