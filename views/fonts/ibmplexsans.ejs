@font-face {
    font-family: 'IBMPlexSans';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/IBMPlexSans-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/IBMPlexSans-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
