@font-face {
    font-family: 'Rubik';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Rubik-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Rubik-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
