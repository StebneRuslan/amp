@font-face {
    font-family: 'Roboto';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Roboto-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Roboto-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
