@font-face {
    font-family: 'AnonymousPro';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/AnonymousPro-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/AnonymousPro-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
