@font-face {
    font-family: 'CrimsonText';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/CrimsonText-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/CrimsonText-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
