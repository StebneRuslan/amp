@font-face {
    font-family: 'PT_Sans-Web';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/PT_Sans-Web-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/PT_Sans-Web-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
