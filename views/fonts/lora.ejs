@font-face {
    font-family: 'Lora';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Lora-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Lora-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
