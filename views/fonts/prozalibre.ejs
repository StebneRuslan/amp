@font-face {
    font-family: 'ProzaLibre';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/ProzaLibre-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/ProzaLibre-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
