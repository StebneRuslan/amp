@font-face {
    font-family: 'Cardo';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Cardo-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Cardo-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
