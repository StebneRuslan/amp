@font-face {
    font-family: 'ArchivoNarrow';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/ArchivoNarrow-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/ArchivoNarrow-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
