@font-face {
    font-family: 'SpaceMono';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/SpaceMono-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/SpaceMono-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
