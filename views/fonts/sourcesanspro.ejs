@font-face {
    font-family: 'SourceSansPro';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/SourceSansPro-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/SourceSansPro-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
