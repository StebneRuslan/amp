@font-face {
    font-family: 'LibreBaskerville';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/LibreBaskerville-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/LibreBaskerville-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
