@font-face {
    font-family: 'LibreFranklin';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/LibreFranklin-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/LibreFranklin-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
