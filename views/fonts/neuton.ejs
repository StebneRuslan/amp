@font-face {
    font-family: 'Neuton';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Neuton-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Neuton-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
