@font-face {
    font-family: 'OpenSans';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/OpenSans-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/OpenSans-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
