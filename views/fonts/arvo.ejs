@font-face {
    font-family: 'Arvo';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Arvo-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Arvo-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
