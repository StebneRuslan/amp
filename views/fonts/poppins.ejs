@font-face {
    font-family: 'Poppins';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Poppins-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Poppins-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
