@font-face {
    font-family: 'Alegreya';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Alegreya-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Alegreya-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
