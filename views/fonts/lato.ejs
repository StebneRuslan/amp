@font-face {
    font-family: 'Lato';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Lato-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Lato-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
