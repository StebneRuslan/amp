@font-face {
    font-family: 'Montserrat';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Montserrat-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Montserrat-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
