@font-face {
    font-family: 'Raleway';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Raleway-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Raleway-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
