@font-face {
    font-family: 'Cormorant';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Cormorant-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Cormorant-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
