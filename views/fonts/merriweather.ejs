@font-face {
    font-family: 'Merriweather';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Merriweather-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Merriweather-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
