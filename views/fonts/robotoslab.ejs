@font-face {
    font-family: 'RobotoSlab';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/RobotoSlab-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/RobotoSlab-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
@font-face {
    font-family: 'Roboto';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/RobotoSlab-Bold.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/RobotoSlab-Bold.ttf') format('truetype');
    <% } %>
    font-weight: bold;
    font-style: normal;
}