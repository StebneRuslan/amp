@font-face {
    font-family: 'Spectral';
    <% if (fontPath.includes('/fonts')) { %>
        src: url('<%=fontPath%>/Spectral-Regular.ttf') format('truetype');
    <% } else { %>
        src: url('<%=fontPath%>/src/public/fonts/Spectral-Regular.ttf') format('truetype');
    <% } %>
    font-weight: 400;
    font-style: normal;
}
