<div class="amp-shape"
     style="width: 100%;height: 100%;opacity: <%=layer.settings.generalSettings.opacity / 100 %>;">
  <div class="inner-item shape" style="width: 100%;height: 100%;">
    <div
            id="shape<%= layer.settings.generalSettings.position ? layer.settings.generalSettings.position : '' %>"
            style="width: 100%;height: 100%;background-color: midnightblue;">
      <% switch (layer.content.value) {
      case 'square' : %>
      <% include ../shapes/square.ejs %>
      <% break
      case 'circle' : %>
      <% include ../shapes/circle.ejs %>
      <% break
      case'triangle' : %>
      <% include ../shapes/triangle.ejs %>
      <% break
      case'line' : %>
      <% include ../shapes/line.ejs %>
      <% break %>
      <% } %>
    </div>
  </div>
</div>